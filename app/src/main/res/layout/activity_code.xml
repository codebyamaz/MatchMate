<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.Code">

    <ImageView
        android:id="@+id/backImage"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="215dp"
        android:layout_height="51dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/skbold"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="215dp"
        android:layout_height="54dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/skregular"
        android:gravity="center"
        android:text="Type the verification code weâ€™ve sent you"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />


    <EditText
        android:id="@+id/edittext1"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:background="#E94057"
        android:fontFamily="@font/skbold"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:nextFocusRight="@id/editttext2"
        android:textColor="@color/white"
        android:textCursorDrawable="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/editttext2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/editttext2"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:background="#E94057"
        android:fontFamily="@font/skbold"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:nextFocusRight="@id/edittext3"
        android:textColor="@color/white"
        android:textCursorDrawable="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/edittext3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edittext1"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/edittext3"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        android:background="#E94057"
        android:fontFamily="@font/skbold"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/white"
        android:textCursorDrawable="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/edittext4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/editttext2"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/edittext4"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="50dp"
        android:background="#E94057"
        android:fontFamily="@font/skbold"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/white"
        android:textCursorDrawable="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edittext3"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <Button
        android:id="@+id/sendagain"
        android:layout_width="295dp"
        android:layout_height="56dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/circle_border"
        android:fontFamily="@font/skbold"
        android:text="Continue"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
